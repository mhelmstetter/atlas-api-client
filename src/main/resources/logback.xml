<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for general logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for detailed request logs -->
    <appender name="REQUEST_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/atlas-requests.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/atlas-requests-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Specific logger for Atlas API requests - only log to file, not console for clean interactive experience -->
    <logger name="AtlasRequestLogger" level="DEBUG" additivity="false">
        <appender-ref ref="REQUEST_FILE" />
    </logger>
    
    <!-- Atlas API loggers - only show warnings/errors on console by default -->
    <logger name="com.mongodb.atlas" level="INFO"/>
    
    <!-- MongoDB driver loggers - reduce noise -->
    <logger name="org.mongodb.driver" level="WARN"/>
    <logger name="com.mongodb" level="WARN"/>
    
    <!-- Show AtlasMetricsAnalyzer logs -->
    <logger name="com.mongodb.atlas.api.AtlasMetricsAnalyzer" level="INFO"/>
    
    <!-- Show MetricsStorage logs for debugging -->
    <logger name="com.mongodb.atlas.api.metrics.MetricsStorage" level="INFO"/>
    
    <!-- Show MetricsReporter logs for data availability reports -->
    <logger name="com.mongodb.atlas.api.metrics.MetricsReporter" level="INFO"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>